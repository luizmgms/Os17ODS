<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AgendaActivity"
    tools:showIn="@layout/layout_agenda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_of_texts"
            android:text="@string/title_moment_agenda"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_margin="@dimen/margin_of_texts"
            android:text="@string/moment_agenda"
            android:textSize="16sp"
            tools:targetApi="O"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_of_texts"
            android:text="@string/title_rumo_agenda"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_margin="@dimen/margin_of_texts"
            android:text="@string/rumo_agenda"
            android:textSize="16sp"
            tools:targetApi="O"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_of_texts"
            android:text="@string/title_now_agenda"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_margin="@dimen/margin_of_texts"
            android:text="@string/now_agenda"
            android:textSize="16sp"
            tools:targetApi="O" />

        <TextView
            android:id="@+id/textLinkPlaylistAgendaId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_of_texts"
            android:text="@string/text_link_playslist_videos"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/videoAgendaId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_video_agenda_1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/video_agenda"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_margin="@dimen/margin_of_texts"
            android:text="@string/now_agenda_2"
            android:textSize="16sp"
            tools:targetApi="O"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>