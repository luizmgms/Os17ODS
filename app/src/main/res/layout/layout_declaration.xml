<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backDeclarationId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/scrollInAgendaId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image2030Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image2030_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ods_2030" />

            <TextView
                android:id="@+id/credit2030Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credit_image_2030"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/titleIntroId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/title_intro_declaration"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/introDeclarationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/intro_declaration"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/titleVisionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/title_vision_declaration"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/visionDeclarationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/vision_declaration"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/titlePrinciplesId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/title_principles_declaration"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/principlesDeclarationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/principles_declaration"
                android:textSize="16sp" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>